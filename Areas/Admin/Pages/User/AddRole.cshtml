@page "/admin/assign-user-role/{id}"
@model FPTJobMatch.Areas.Admin.Models.AddRoleModel
@{
    ViewData["Title"] = "Set Role";
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container">
    <div class="row justify-content-center">
        <div class="row">
            <div class="col-md-10">
                <h1 class="text-center">Set Role cho User: @Model.user.UserName</h1>
                <form id="set-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mb-3">
                        <label asp-for="RoleNames"></label>
                        @Html.ListBoxFor(m => m.RoleNames, @Model.allRoles, new
                        {
                            id = "id-select-roles",
                            @class = "form-control"
                        })
                        <span asp-validation-for="RoleNames" class="text-danger"></span>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                    <div>
                        <a class="btn btn-primary" asp-page="./Index">List Member</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
