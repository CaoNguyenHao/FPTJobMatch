@page "/admin/change-member-password/{id}"
@model FPTJobMatch.Areas.Admin.Models.SetPasswordModel
@{
    ViewData["Title"] = "Set password";
}

<h3>Set Password For Member: @Model.user.UserName</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form id="set-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.NewPassword" class="form-label"></label>
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" placeholder="Please enter your new password." />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" placeholder="Please confirm your new password." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Set password</button>
                <a class="btn btn-primary" asp-page="./Index">List Member</a>
            </form>
        </div>
    </div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
