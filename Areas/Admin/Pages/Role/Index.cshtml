@page "/admin/role/"
@model FPTJobMatch.Areas.Admin.Models.ListRoleModel
@{

    ViewData["Title"] = "List Role ";
}
<h2>@ViewData["Title"]</h2>
<div class="container">
    <div class="row justify-content-center">
        <partial name="_StatusMessage" model="@Model.StatusMessage"></partial>

        <div class="mb-2">
            <a class="btn btn-secondary" asp-page="./Create">Create Role</a>
            <a class="btn btn-secondary" asp-page="../User/Index">Manage Member</a>
        </div>

        <table class="table">
            <tr>
                <th>
                    Role
                </th>
                <th>
                    Action
                </th>

            </tr>
            @foreach (var role in Model.roles)
            {
                <tr>
                    <td>@role.Name</td>
                    <td>
                        @*<a class="btn btn-success btn-sm" asp-page="./Edit" asp-route-roleid="@role.Id">Update</a>*@
                        <a class="btn btn-success btn-sm" asp-page="./Delete" asp-route-roleid="@role.Id">Delete</a>
                    </td>
                </tr>



            }
        </table>
    </div>
</div>
