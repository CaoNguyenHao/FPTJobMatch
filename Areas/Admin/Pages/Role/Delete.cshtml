@page "/admin/delete-role/{roleid}"
@model FPTJobMatch.Areas.Admin.Models.DeleteModel
@{
    ViewData["Title"] = "Delete Role";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="@Model.StatusMessage" />

<div class="container">
    <div class="row justify-content-center">
        <div class="row">
            <div class="col-md-8">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <p>Are you sure delete?<strong>@Model.role.Name</strong></p>

                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>

                    <a class="btn btn-primary" asp-page="./Index">List Role</a>
                </form>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
