@model FPTJobMatch.Models.Candidate
<h1>Add Candidate</h1>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label class="form-label">Id</label>
        <input asp-for="Id" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Job Position</label>
        <input asp-for="JobPosition" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">User Name</label>
        <input asp-for="Name" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Email" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Phone Number</label>
        <input asp-for="PhoneNumber" type="text" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Work Experiences</label>
        <input asp-for="WorkExperiences" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Upload Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" />
    </div>
    <div class="mb-3">
        <input type="submit" class="btn btn-primary" value="Save">
    </div>
</form>
