@model IEnumerable<FPTJobMatch.Models.Candidate>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>List Candidate</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom CSS */
        .button-container {
            display: flex;
        }

            .button-container a {
                margin-right: 10px;
            }
        .img-container {
            width: 100px; /* Đặt chiều rộng của khung hình ảnh */
            height: 100px; /* Đặt chiều cao của khung hình ảnh */
            overflow: hidden; /* Ẩn phần vượt ra ngoài khung */
        }

            .img-container img {
                width: 100%; /* Đảm bảo hình ảnh vừa với khung */
                height: auto; /* Đảm bảo tỷ lệ khung hình ảnh tự động */
                display: block; /* Hiển thị hình ảnh là một khối độc lập */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">List Candidate</h1>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Job Position<th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone Number</th>
                        <th>Work Experiences</th>
                        <th>Image</th>
                        <th></th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var candidate in Model)
                    {
                        <tr>
                            <td>@candidate.Id</td>
                            <td>@candidate.JobPosition</td>
                            <td></td>
                            <td>@candidate.Name</td>
                            <td>@candidate.Email</td>
                            <td>@candidate.PhoneNumber</td>
                            <td>@candidate.WorkExperiences</td>
                            <td class="img-container">
                                <img src="~/img/Candidates/925FD389-F869-492E-A5BB-25116727F037.png" />
                            <td/>
                            <td>@candidate.Status</td>
                            <td>
                                <div class="button-container">
                                    @if (User.IsInRole("Company") && candidate.Status == FPTJobMatch.Models.CandidateStatus.Pending)
                                    {
                                        <a href="@Url.Action("ApproveCandidate", new { candidateId = candidate.Id })" class="btn btn-success">Approve</a>
                                        <a href="@Url.Action("RejectCandidate", new { candidateId = candidate.Id })" class="btn btn-success">Reject</a>

                                    }
                                    @if (User.IsInRole("Applicant"))
                                    {
                                        <a href="@Url.Action("Delete", new { id = candidate.Id })" class="btn btn-danger">Delete</a>

                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
